<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/gallery_paging"
    >


    <!-- <ImageView
         android:layout_width="match_parent"
         android:layout_height="200dp"
         android:id="@+id/galleryimage"
         android:layout_marginTop="5dp"

         />-->
      <ScrollView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:id="@+id/morephptos"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/morephotos" />


    <Gallery
        android:id="@+id/mygallery01"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:spacing="0px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




    <LinearLayout
        android:id="@+id/image_count"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/mygallery01"
        android:layout_below="@+id/mygallery01">
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignTop="@+id/mygallery01"
            android:layout_alignLeft="@+id/mygallery01"
            android:layout_alignStart="@+id/mygallery01"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="fill_parent"
                android:paddingLeft="22dp"
                android:minHeight="40dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:background="#e9e6e6"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:text="Article Of The Day"
                android:id="@+id/eventdetaillebel"
                android:layout_above="@+id/contact_details"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/eventtitle"
                android:id="@+id/eventdeatil"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/black"
                android:text="@string/eventdeatil"
                android:textSize="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

    </LinearLayout>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:orientation="horizontal"
android:layout_alignParentBottom="true"
android:layout_marginTop="10dp"
android:id="@+id/commentbox_city"
android:background="#FF000000"
android:layout_height="100dp">


<LinearLayout
    android:layout_weight=".60"
    android:layout_marginRight="3dp"
    android:layout_width="0dp"
    android:orientation="horizontal"
    android:layout_height="match_parent"
   >


    <EditText
        android:paddingLeft="7dp"
        android:layout_weight="0.45"
        android:textColorHint="#000000"
        android:hint="Comment here..."
        android:layout_margin="2dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_width="0dp"
        android:id="@+id/comment_description"
        android:imeOptions="actionDone"
        android:inputType="textImeMultiLine"
        android:layout_height="match_parent"
        android:background="#ffffff"
        />
    <Button
        android:layout_margin="2dp"
        android:layout_weight=".10"
        android:layout_width="0dp"
        android:text="post"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:layout_alignParentRight="true"
        android:padding="1dp"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:id="@+id/post_button"
        android:background="#e9e6e6"
        android:textAlignment="center"/>
</LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:paddingLeft="22dp"
            android:minHeight="40dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:background="#e9e6e6"
            android:textColor="@android:color/black"
            android:padding="12dp"
            android:text="View Previous Comments......."
            android:id="@+id/eventdetaillebel"
            android:layout_above="@+id/contact_details"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

         <android.support.v7.widget.RecyclerView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:visibility="visible"
             android:id="@+id/commentlist">

         </android.support.v7.widget.RecyclerView>

    </LinearLayout>


      </ScrollView>
</RelativeLayout>

