<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

      <Spinner
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/spin_sort"
        android:padding="10dp"
        android:spinnerMode="dropdown"
        android:entries="@array/Sort"
        android:textAlignment="center"
          />

      <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spin_filter"
        android:padding="10dp"
        android:textAlignment="center"
        android:entries="@array/brandfilter"
        android:layout_toRightOf="@+id/spin_sort"
        android:layout_toEndOf="@+id/spin_sort"/>


       <android.support.v7.widget.RecyclerView
                android:paddingBottom="60dp"
                android:id="@+id/recycler_feed_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:clipToPadding="false"
                android:layout_below="@+id/spin_sort"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</RelativeLayout>