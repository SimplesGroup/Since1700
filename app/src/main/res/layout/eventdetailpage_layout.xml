<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"

    android:id="@+id/gallery_paging"
    >


   <!-- <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/galleryimage"
        android:layout_marginTop="5dp"

        />-->\
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/product_category_image"
        android:orientation="horizontal"
        android:id="@+id/linearLayout6">


        <ImageButton
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/morephptos"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/morephotos" />
        <TextView
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:id="@+id/morephptos_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"

            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <Gallery
        android:id="@+id/mygallery01"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:spacing="0px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:id="@+id/image_count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/mygallery01"
        android:layout_below="@+id/mygallery01">
    </LinearLayout>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:layout_below="@+id/mygallery01"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignTop="@+id/mygallery01"
    android:layout_alignLeft="@+id/mygallery01"
    android:layout_alignStart="@+id/mygallery01"
    android:layout_marginTop="1dp">

    <TextView
        android:layout_width="fill_parent"
        android:paddingLeft="22dp"
        android:minHeight="40dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:background="@color/whitegradient"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:text="Event Detail"
        android:id="@+id/eventdetaillebel"
        android:layout_above="@+id/contact_details"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/eventtitle"
        android:id="@+id/eventdeatil"
        android:textColor="@color/white"
        android:text="@string/eventdeatil"
        android:textSize="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/contact_details"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignStart="@+id/linearLayout3">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/eventtitle"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:paddingLeft="45dp"
            android:background="@color/whitegradient"
            android:text="VENUE  CONTACT INFORMATION"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/venue_layout"
            android:orientation="horizontal"
            android:layout_below="@+id/eventtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/eventtitle"
                android:id="@+id/text_eventvenue"
                android:textColor="@color/white"
                android:text="Venue"
                android:textSize="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/eventtitle"
                android:layout_marginTop="10dp"
                android:text="Simple Solutions"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/text_eventvenue"
                android:id="@+id/text_eventvenue_details"
                android:textColor="@color/white"
                />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:id="@+id/text_eventlocation"
            android:layout_below="@+id/venue_layout"
            android:textColor="@color/white"
            android:text="Location"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="10dp"
            android:text="R.s.Puram,Coimbatore"
            android:textSize="15dp"
            android:layout_below="@+id/venue_layout"
            android:layout_toRightOf="@+id/text_eventlocation"
            android:id="@+id/text_eventlocation_details"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:id="@+id/text_eventwebsite"
            android:text="Website"
            android:textSize="15dp"
            android:layout_below="@+id/text_eventlocation"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="10dp"
            android:text="http://simpli-city.in"
            android:textSize="15dp"
            android:layout_below="@+id/text_eventlocation_details"
            android:layout_toRightOf="@+id/text_eventwebsite"
            android:id="@+id/text_eventwebsite_details"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:text="Phone"
            android:textSize="15dp"
            android:layout_below="@+id/text_eventwebsite"
            android:id="@+id/text_eventontactname"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="10dp"
            android:text="0422 4500445"
            android:textSize="15dp"
            android:layout_below="@+id/text_eventwebsite_details"
            android:layout_toRightOf="@+id/text_eventontactname"
            android:id="@+id/text_eventontactname_details"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:id="@+id/phone_layout"
            android:orientation="horizontal"
            android:layout_below="@+id/text_eventontactname_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:text="Email"
                android:textSize="15dp"
                android:id="@+id/text_eventphonenumber"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:text="ads@simples.in"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/text_eventphonenumber"
                android:id="@+id/text_eventphonenumber_details"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:id="@+id/text_eventemail"
            android:layout_below="@+id/phone_layout"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"

            android:layout_below="@+id/phone_layout"
            android:layout_toRightOf="@+id/text_eventemail"
            android:id="@+id/text_eventemail_details"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/mygallery01"
        android:layout_alignStart="@+id/mygallery01"
        android:id="@+id/linearLayout3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:text="Date"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:id="@+id/text_date_event"
                    android:layout_margin="2dp"
                    android:background="@color/whitefood"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_weight=".45"
                    android:layout_width="0dp"
                    android:minHeight="48dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Nov 03,2017 - Nov 04,2017"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:id="@+id/text_date_event_data"
                    android:layout_toRightOf="@+id/text_date_event"
                    android:background="@color/whitefood"
                    android:layout_margin="2dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="50"

                android:orientation="horizontal"
                android:layout_height="0dp">
                <TextView
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:text="Timing"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_below="@+id/text_date_event"
                    android:id="@+id/text_timing_event"
                    android:layout_margin="2dp"
                    android:background="@color/whitefood"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_weight=".45"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:text="09:30 AM - 04:30PM"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_below="@+id/text_date_event_data"
                    android:id="@+id/text_timing_event_data"
                    android:layout_toRightOf="@+id/text_timing_event"
                    android:background="@color/whitefood"
                    android:layout_margin="2dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <Button
                android:layout_alignParentRight="true"
                android:layout_weight="30"
                android:minWidth="110dp"
                android:minHeight="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:id="@+id/remindme"
                android:layout_margin="2dp"
                android:background="@color/whitegradient"
                android:textAlignment="center"
                android:text="Remind me"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>
</RelativeLayout>