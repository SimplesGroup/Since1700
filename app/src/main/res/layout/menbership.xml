<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menbership">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="15dp"
            android:background="@drawable/membershipgradient"
            android:id="@+id/textview_membership"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textview_firstdescription"
            android:layout_width="match_parent"

            android:textColor="@android:color/white"

            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/footerline"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_below="@+id/textview_firstdescription"

            >
            <View
                android:layout_width="wrap_content"
                android:background="@android:color/white"
                android:layout_height="1dp"
                ></View>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textview_seconddescription"
            android:layout_width="match_parent"

            android:textColor="@android:color/white"

            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:padding="7dp"
            android:background="@android:color/black"
            android:id="@+id/textview_invitebyamember_title"
            android:layout_width="match_parent"

            android:textColor="@android:color/white"

            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textview_invitebyamember_description"
            android:layout_width="match_parent"

            android:textColor="@android:color/white"

            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:padding="7dp"
            android:background="@android:color/black"
            android:id="@+id/textview_applymembership_title"
            android:layout_width="match_parent"

            android:textColor="@android:color/white"

            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textview_applymembership_description"
            android:layout_width="match_parent"

            android:textColor="@android:color/white"

            android:layout_height="wrap_content" />
        <Button
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:padding="7dp"
            android:background="@android:color/white"
            android:id="@+id/button_applymembership"
            android:layout_width="match_parent"

            android:textColor="@android:color/black"

            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>




</RelativeLayout>